<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="RepairShopIS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система учёта ремонта телевизоров" 
        Height="320" Width="420"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Клиенты" Width="220" Height="40" Margin="10" Click="ManageClients_Click"/>
            <Button Content="Сотрудники" Width="220" Height="40" Margin="10" Click="ManageEmployees_Click"/>
            <Button Content="Телевизоры" Width="220" Height="40" Margin="10" Click="ManageTelevisions_Click"/>
            <Button Content="Заказы / ремонты" Width="220" Height="40" Margin="10" Click="ManageOrders_Click"/>
            <Button Content="Отчёты" Width="220" Height="40" Margin="10" Click="ViewReports_Click"/>
        </StackPanel>
    </Grid>
</Window>