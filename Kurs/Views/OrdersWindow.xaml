<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="RepairShopIS.Views.OrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление заказами" Height="500" Width="900">
    <TabControl>
        <TabItem Header="Добавление заказа">
            <StackPanel Orientation="Vertical" Margin="10">
                <Label Content="Клиент:"/>
                <ComboBox x:Name="ClientCombo" DisplayMemberPath="FullName"/>
                <Label Content="Сотрудник:"/>
                <ComboBox x:Name="EmployeeCombo" DisplayMemberPath="FullName"/>
                <Label Content="Телевизор:"/>
                <ComboBox x:Name="TelevisionCombo" DisplayMemberPath="Brand"/>
                <Label Content="Дата приема:"/>
                <DatePicker x:Name="ReceiptDatePicker"/>
                <Label Content="Устраненные неисправности (по строкам):"/>
                <TextBox x:Name="FixedIssuesText" AcceptsReturn="True" Height="60"/>
                <Label Content="Стоимость:"/>
                <TextBox x:Name="CostText"/>
                <Label Content="Гарантия (месяцев):"/>
                <TextBox x:Name="WarrantyText"/>
                <Button Content="Добавить заказ" Click="AddOrder_Click" Margin="0,10,0,0"/>
            </StackPanel>
        </TabItem>
        <TabItem Header="Список заказов">
            <DataGrid x:Name="OrdersGrid" AutoGenerateColumns="True" IsReadOnly="True" Margin="10"/>
        </TabItem>
        <TabItem Header="Завершение заказа">
            <StackPanel Orientation="Vertical" Margin="10">
                <Label Content="Выберите заказ для завершения:"/>
                <ComboBox x:Name="CompleteOrderCombo"/>
                <!-- Удалён DisplayMemberPath, чтобы использовался ToString() -->
                <Label Content="Дата выдачи:"/>
                <DatePicker x:Name="IssueDatePicker"/>
                <CheckBox x:Name="IsFaultyCheck" Content="Некачественный ремонт" Margin="0,10,0,0"/>
                <Button Content="Завершить выбранный заказ" Click="CompleteOrder_Click" Margin="0,10,0,0"/>
            </StackPanel>
        </TabItem>
        <TabItem Header="Удаление заказа">
            <StackPanel Orientation="Vertical" Margin="10">
                <Label Content="Выберите заказ для удаления:"/>
                <ComboBox x:Name="DeleteOrderCombo"/>
                <!-- Удалён DisplayMemberPath, чтобы использовался ToString() -->
                <Button Content="Удалить выбранный заказ" Click="DeleteOrder_Click" Margin="0,10,0,0"/>
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>