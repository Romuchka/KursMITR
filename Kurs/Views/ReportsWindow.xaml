<Window x:Class="RepairShopIS.Views.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Отчеты" Height="600" Width="900">
    <TabControl>
        <TabItem Header="Заказы за период">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Margin="10">
                    <Label Content="С:"/>
                    <DatePicker x:Name="StartDatePicker"/>
                    <Label Content="По:" Margin="10,0,0,0"/>
                    <DatePicker x:Name="EndDatePicker"/>
                    <Button Content="Сформировать" Click="GenerateOrdersReport_Click" Margin="10,0,0,0"/>
                </StackPanel>
                <DataGrid x:Name="OrdersReportGrid" Grid.Row="1" AutoGenerateColumns="True" IsReadOnly="True" Margin="10"/>
            </Grid>
        </TabItem>
        <TabItem Header="Постоянные клиенты">
            <DataGrid x:Name="ClientsReportGrid" AutoGenerateColumns="True" IsReadOnly="True" Margin="10" Loaded="ClientsReportGrid_Loaded"/>
        </TabItem>
        <TabItem Header="Статистика сотрудников">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Margin="10">
                    <Label Content="С:"/>
                    <DatePicker x:Name="StartDateEmpPicker"/>
                    <Label Content="По:" Margin="10,0,0,0"/>
                    <DatePicker x:Name="EndDateEmpPicker"/>
                    <Button Content="Сформировать" Click="GenerateEmployeesReport_Click" Margin="10,0,0,0"/>
                </StackPanel>
                <DataGrid x:Name="EmployeesReportGrid" Grid.Row="1" AutoGenerateColumns="True" IsReadOnly="True" Margin="10"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>